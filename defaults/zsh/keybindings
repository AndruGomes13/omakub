# --- COMPLETION INTERFACE ---
# Interactive arrow-key menu for Tab-completion
zstyle ':completion:*' menu select
# Colorize menu items using your system's LS_COLORS
zstyle ':completion:*' list-colors "${(s.:.)LS_COLORS}"

# --- INPUT MODE ---
# Use Emacs-style keybindings (standard shell behavior)
bindkey -e

# --- SMART HISTORY SEARCH ---
# Arrows search history using current input as a prefix
bindkey "^[[A" history-beginning-search-backward  # Standard Up
bindkey "^[[B" history-beginning-search-forward   # Standard Down
bindkey "^[OA" history-beginning-search-backward  # Alt/Tmux Up
bindkey "^[OB" history-beginning-search-forward   # Alt/Tmux Down

# Classic shortcuts for the same behavior
bindkey '^P' history-beginning-search-backward
bindkey '^N' history-beginning-search-forward

# --- LINE EDITING & NAVIGATION ---
# Home, End, and Delete keys
bindkey "^[[H" beginning-of-line                 # Home
bindkey "^[[F" end-of-line                       # End
bindkey "^[[3~" delete-char                      # Delete

# Word-based movement (Ctrl + Arrows)
bindkey '^[[1;5D' backward-word                  # Ctrl+Left
bindkey '^[[1;5C' forward-word                   # Ctrl+Right

# Word-based deletion
bindkey '^W' backward-kill-word                  # Ctrl+W
bindkey '^[[3;5~' kill-word                      # Ctrl+Delete